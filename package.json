{
  "name": "odinsoft",
  "version": "1.0.0",
  "description": "OdinSoft Admin Panel with MongoDB",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "dev": "set NODE_ENV=development && node --trace-warnings src/server.js",
    "start": "set NODE_ENV=production&& node src/server.js",
    "dev-linux": "NODE_ENV=development node --trace-warnings src/server.js",
    "start-linux": "NODE_ENV=production node src/server.js",
    "logs": "tail -f logs/*.log",
    "clean-logs": "rm -rf logs/*.log",
    "debug": "set NODE_OPTIONS=--inspect&& npm run dev",
    "debug-brk": "set NODE_OPTIONS=--inspect-brk&& npm run dev",
    "test": "jest --coverage",
    "lint": "eslint .",
    "format": "prettier --write .",
    "clean": "rm -rf node_modules package-lock.json",
    "reset": "npm run clean && npm install",
    "prod": "set NODE_ENV=production&& node src/server.js"
  },
  "dependencies": {
    "axios": "^1.8.4",
    "bcryptjs": "^2.4.3",
    "chart.js": "^4.4.0",
    "cluster": "^0.7.7",
    "compression": "^1.7.4",
    "connect-mongo": "^5.1.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cron": "^4.1.4",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^6.11.2",
    "express-session": "^1.18.1",
    "express-slow-down": "^1.6.0",
    "express-validator": "^7.2.1",
    "helmet": "^7.2.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "mongodb": "^6.15.0",
    "mongoose": "^8.1.3",
    "morgan": "^1.10.0",
    "nodemailer": "^6.10.0",
    "path": "^0.12.7",
    "redis": "^4.6.10",
    "socket.io": "^4.7.2",
    "speakeasy": "^2.0.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/express-rate-limit": "^5.1.3",
    "@types/express-slow-down": "^1.3.5",
    "@types/node": "^22.14.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.4.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-security": "^3.0.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.2.5",
    "supertest": "^7.0.0"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=11.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/",
      "/config/"
    ],
    "setupFiles": [
      "dotenv/config"
    ]
  }
}
